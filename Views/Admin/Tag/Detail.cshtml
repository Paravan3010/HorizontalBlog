@using Microsoft.AspNetCore.Components.Routing
@using Horizontal.Models.Admin

@model AdminTagModel
@{
    Layout = "/Views/Admin/_AdminLayout.cshtml";
}

@section AdminScripts {
    <script type="text/javascript" src="/js/admin-forms.js"></script>
}

<h3>Detail a editace tagu</h3>

<form method="post" action="edit">
    <fieldset>
        <input type="hidden" name="Id" value="@Model.Id">

        <div class="form-group">
            <label for="Name">Název</label>
            <input name="Name" class="form-control" value="@Model.Name" />
        </div>
        <div class="form-group">
            <label for="ArticleShortTitles">Názevy článků</label>
            <textarea name="ArticleShortTitles" class="form-control" rows="6" placeholder="Článek 1, Článek 2, Článek 3" >@Model.ArticleShortTitles</textarea>
        </div>
        <div class="form-group">
            <label for="CustomUrl">Vlastní URL</label>
            <input name="CustomUrl" class="form-control" rows="3" value="@Model.CustomUrl" />
        </div>
        <div class="form-group">
            <input name="IsInTopNavbar" class="form-check-input" type="checkbox" value="@(Model.IsInTopNavbar ? "true" : "false")" @(Model.IsInTopNavbar ? "checked" : "") />
            <label for="IsInTopNavbar" class="form-check-label">V horní liště</label>
        </div>
        <div class="form-group">
            <label for="TopNavbarOrder">Pořadí v horní liště</label>
            <input name="TopNavbarOrder" class="form-control" value="@Model.TopNavbarOrder" />
        </div>

        <div class="form-group">
            <input name="IsPublished" class="form-check-input" type="checkbox" value="@(Model.IsPublished ? "true" : "false")" @(Model.IsPublished ? "checked" : "") />
            <label for="IsPublished" class="form-check-label">Publikováno</label>
        </div>
    </fieldset>

    <button type="submit" class="btn btn-success mb-2">Uložit změny</button>
</form>