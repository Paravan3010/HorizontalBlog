                <li>
                    <a href="@customUrlProviderService.GetCustomUrl("Home", "Main")">
                        <i class="fa-solid fa-house"></i>
                        <span>Domů</span>
                    </a>
                </li>
                <li>
                    <a href="@customUrlProviderService.GetCustomUrl("Contact")">
                        <i class="fa-solid fa-envelope"></i>
