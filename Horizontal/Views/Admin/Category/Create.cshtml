@using Microsoft.AspNetCore.Components.Routing
@using Horizontal.Models.Admin

@model AdminCategoryModel
@{
    Layout = "/Views/Admin/_AdminLayout.cshtml";
}
@section AdminScripts {
    <script type="text/javascript" src="/js/admin-forms.js"></script>
}

<h3>Nová kategorie</h3>

<form method="post" action="create">
    <fieldset>
        <div class="form-group">
            <label for="Name">Název</label>
            <input name="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="ParentCategoryName">Název nadřazené kategorie</label>
            <input name="ParentCategoryName" class="form-control" />
        </div>
        <div class="form-group">
            <label for="ChildCategoryNames">Názvy podřízených kategorií</label>
            <textarea name="ChildCategoryNames" class="form-control" rows="3" placeholder="Kategorie 1, Kategorie 2, Kategorie 3"></textarea>
        </div>
        <div class="form-group">
            <label for="ArticleShortNames">Názvy článků kategorie</label>
            <textarea name="ArticleShortNames" class="form-control" rows="6" placeholder="Článek 1, Článek 2, Článek 3"></textarea>
        </div>
        <div class="form-group">
            <label for="PageTitle">Titulek stránky kategorie (zobrazený mimo jiné v záložce prohlížeče)</label>
            <input name="PageTitle" class="form-control" value="" />
        </div>
        <div class="form-group">
            <label for="PageDescription">Stručný popis stránky kategorie (zobrazený např. v náhledu stránky z internetového vyhledávače)</label>
            <textarea name="PageDescription" class="form-control" rows="6" oninput="updateCharacterCount(this, 'page-description-char-count')"></textarea>
            <span id="page-description-char-count" style="float:right">Znaků: 0)</span>
        </div>
        <div class="form-group">
            <label for="CustomUrl">Vlastní URL</label>
            <input name="CustomUrl" class="form-control" />
        </div>
        <div class="form-group">
            <input name="IsInTopNavbar" class="form-check-input" type="checkbox" value="" />
            <label for="IsInTopNavbar" class="form-check-label">V horní liště</label>
        </div>
        <div class="form-group">
            <label for="TopNavbarOrder">Pořadí v horní liště</label>
            <input name="TopNavbarOrder" class="form-control" />
        </div>

        <div class="form-group">
            <input name="IsPublished" class="form-check-input" type="checkbox" value="" />
            <label for="IsPublished" class="form-check-label">Publikováno</label>
        </div>
    </fieldset>

    <button type="submit" class="btn btn-success mb-2">Uložit</button>
</form>