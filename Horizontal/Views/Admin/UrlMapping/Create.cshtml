@using Microsoft.AspNetCore.Components.Routing
@using Horizontal.Models.Admin

@model UrlMappingModel
@{
    Layout = "/Views/Admin/_AdminLayout.cshtml";
}
@section AdminScripts {
    <script type="text/javascript" src="/js/admin-forms.js"></script>
}

<h3>Nové mapování vlastní URL</h3>

<form method="post" action="create">
    <fieldset>
        <div class="form-group">
            <input name="IsActive" class="form-check-input" type="checkbox" value="" />
            <label for="IsActive" class="form-check-label">Aktivní</label>
        </div>
        <div class="form-group">
            <label for="OriginalUrl">Původní URL</label>
            <input name="OriginalUrl" class="form-control" />
        </div>
        <div class="form-group">
            <label for="NewUrl">Nová URL</label>
            <input name="NewUrl" class="form-control" />
        </div>
    </fieldset>

    <button type="submit" class="btn btn-success mb-2">Uložit</button>
</form>